<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
	version="2.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
	<portlet>
		<portlet-name>SimpleHelloWorld</portlet-name>
		<display-name>SimpleHelloWorld Application</display-name>
		<portlet-class>org.javacream.portlets.demo.SimpleHelloWorldPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>HELP</portlet-mode>
		</supports>
		<portlet-info>
			<title>Simple Hello World</title>
			<short-title>Javacream Demo short title</short-title>
			<keywords>Javacream Demo keyword</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>SessionPortlet1</portlet-name>
		<display-name>Session Portlet 1</display-name>
		<portlet-class>org.javacream.portlets.demo.SessionPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Session Portlet 1</title>
			<short-title>Session Portlet 1</short-title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>SessionPortlet2</portlet-name>
		<display-name>Session Portlet 2</display-name>
		<portlet-class>org.javacream.portlets.demo.SessionPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Session Portlet 2</title>
			<short-title>Session Portlet 2</short-title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>SimpleParam</portlet-name>
		<display-name>SimpleParam Application</display-name>
		<portlet-class>org.javacream.portlets.demo.SimpleParamPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
		</supports>
		<portlet-info>
			<title>Simple Param sample</title>
			<short-title>Javacream Demo short title</short-title>
			<keywords>Javacream Demo keyword</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>JavacreamDemo</portlet-name>
		<display-name>Javacream Demo Application</display-name>
		<portlet-class>org.javacream.portlets.demo.HelloWorldPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Javacream Demo</title>
			<short-title>Javacream Demo short title</short-title>
			<keywords>Javacream Demo keyword</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>JavacreamJspDemo</portlet-name>
		<display-name>Javacream Demo With JSP</display-name>
		<portlet-class>org.javacream.portlets.demo.SimpleJspPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
			<portlet-mode>VIEW</portlet-mode>
			<portlet-mode>EDIT</portlet-mode>
			<portlet-mode>HELP</portlet-mode>
		</supports>
		<portlet-info>
			<title>Javacream Demo With Jsp</title>
			<short-title>Javacream Demo short title</short-title>
			<keywords>Javacream Demo keyword</keywords>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>SimpleAjaxPortlet</portlet-name>
		<display-name>SimpleAjaxPortlet</display-name>
		<portlet-class>org.javacream.portlets.demo.SimpleJspAjaxPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Ajax Portlet</title>
			<short-title>AjaxPortlet short title</short-title>
		</portlet-info>
	</portlet>
	<portlet>
		<portlet-name>EventConsumer</portlet-name>
		<display-name>EventConsumer</display-name>
		<portlet-class>org.javacream.portlets.demo.EventConsumerPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Event Consumer Portlet</title>
			<short-title>EventConsumer short title</short-title>
		</portlet-info>
		<supported-processing-event>
			<qname xmlns:x="http://javacream.org/events">x:javacreamEvent</qname>
		</supported-processing-event>
	</portlet>
	<portlet>
		<portlet-name>EventProducer</portlet-name>
		<display-name>EventProducer</display-name>
		<portlet-class>org.javacream.portlets.demo.EventProducerPortlet</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>Event Producer Portlet</title>
			<short-title>EventProducer short title</short-title>
		</portlet-info>
		<supported-publishing-event>
			<qname xmlns:x="http://javacream.org/events">x:javacreamEvent</qname>
		</supported-publishing-event>
	</portlet>
	<portlet>
		<portlet-name>SharedRenderParameter1</portlet-name>
		<display-name>SharedRenderParameter1</display-name>
		<portlet-class>
			org.javacream.portlets.demo.SharedRenderParameterPortlet1
		</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>SharedRenderParameter Portlet1</title>
			<short-title>SharedRenderParameter1 short title</short-title>
		</portlet-info>
		<supported-public-render-parameter>name</supported-public-render-parameter>
	</portlet>
	<portlet>
		<portlet-name>SharedRenderParameter2</portlet-name>
		<display-name>SharedRenderParameter2</display-name>
		<portlet-class>
			org.javacream.portlets.demo.SharedRenderParameterPortlet2
		</portlet-class>
		<expiration-cache>0</expiration-cache>
		<supports>
			<mime-type>text/html</mime-type>
		</supports>
		<portlet-info>
			<title>SharedRenderParameter Portlet2</title>
			<short-title>SharedRenderParameter2 short title</short-title>
		</portlet-info>
		<supported-public-render-parameter>name</supported-public-render-parameter>
	</portlet>
	<default-namespace>http://javacream.org/events</default-namespace>
	<event-definition>
		<qname xmlns:x="http://javacream.org/events">x:javacreamEvent</qname>
	</event-definition>

	<public-render-parameter>
		<identifier>name</identifier>
		<qname xmlns:javacream='http://javacream.org/ipc'>javacream:name</qname>
	</public-render-parameter>
	
	
	<container-runtime-option>
	<name>javax.portlet.actionScopedRequestAttributes</name>
	<value>true</value>
	</container-runtime-option>
	
</portlet-app>